{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Translation File Schema",
  "description": "Schema for translation files in the multi-language translation system",
  "type": "object",
  "required": ["meta", "content", "html"],
  "properties": {
    "meta": {
      "type": "object",
      "required": ["title", "description", "language", "chapter", "sourceFile", "lastUpdated"],
      "properties": {
        "title": {
          "type": "string",
          "description": "Title of the translated content"
        },
        "description": {
          "type": "string",
          "description": "Brief description of the translated content"
        },
        "language": {
          "type": "string",
          "enum": ["ur", "ar"],
          "description": "Target language code (ur for Urdu, ar for Arabic)"
        },
        "chapter": {
          "type": "string",
          "description": "Chapter identifier (e.g., '00-introduction', '01-ros2')"
        },
        "sourceFile": {
          "type": "string",
          "description": "Original source file path for reference"
        },
        "lastUpdated": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 datetime of last update"
        }
      },
      "additionalProperties": false
    },
    "content": {
      "type": "object",
      "properties": {
        "headings": {
          "type": "object",
          "description": "Mapping of heading IDs to translated text",
          "patternProperties": {
            "^.*$": {
              "type": "string",
              "description": "Translated heading text"
            }
          },
          "additionalProperties": true
        },
        "paragraphs": {
          "type": "object",
          "description": "Mapping of paragraph IDs to translated text",
          "patternProperties": {
            "^.*$": {
              "type": "string",
              "description": "Translated paragraph text"
            }
          },
          "additionalProperties": true
        },
        "lists": {
          "type": "object",
          "description": "Mapping of list IDs to array of translated list items",
          "patternProperties": {
            "^.*$": {
              "type": "array",
              "items": {
                "type": "string",
                "description": "Translated list item"
              }
            }
          },
          "additionalProperties": true
        }
      },
      "required": ["headings", "paragraphs", "lists"],
      "additionalProperties": false
    },
    "html": {
      "type": "string",
      "description": "Complete HTML content with all translations applied, preserving original structure"
    }
  },
  "additionalProperties": false
}